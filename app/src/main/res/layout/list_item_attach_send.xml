<?xml version="1.0" encoding="utf-8"?>
<com.qugengting.email.widget.SwipeMenuView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_attach">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAttach"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            tools:src="@drawable/ic_file_txt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAttachName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="middle"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/colorThemeII"
                android:textSize="12sp"
                tools:text="Android编程开发高手.txt" />

            <TextView
                android:id="@+id/tvAttachSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:includeFontPadding="false"
                android:textColor="@color/hint_normal"
                android:textSize="10sp"
                tools:text="23kb" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_attach_delete"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="#FD5059"
        android:text="@string/mail_delete"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />
</com.qugengting.email.widget.SwipeMenuView>