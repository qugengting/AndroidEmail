<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_content_rlyt"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/toolbar_left_btn"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@null"
        android:gravity="center"
        android:src="@drawable/ic_back"
        android:visibility="visible" />

    <TextView
        android:id="@+id/toolbar_left_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/common_back"
        android:textColor="@color/colorThemeII"
        android:textSize="15sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/toolbar_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/toolbar_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxEms="10"
            android:singleLine="true"
            android:textColor="@color/colorThemeII"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="标题" />

        <ImageView
            android:id="@+id/toolbar_title_iv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/ic_down"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

    <Button
        android:id="@+id/toolbar_right_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="#00000000"
        android:gravity="center"
        android:textColor="@color/colorThemeII"
        android:textSize="15sp"
        android:visibility="invisible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/toolbar_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12.5dp"
        android:gravity="center"
        android:text="更多"
        android:textColor="#fff"
        android:textSize="17.2sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/toolbar_right1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/toolbar_right_tv"
        android:gravity="center"
        android:text="清空"
        android:textColor="#fff"
        android:textSize="15sp"
        android:visibility="invisible" />

</RelativeLayout>